{
  "name": "basic-component-tests",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.1",
    "chroma-js": "^2.1.1",
    "jest": "^26.6.0",
    "react-select": "^4.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^1.1.5",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "PORT=6200 react-scripts start",
    "build": "react-scripts build",
    "lint": "lint-staged",
    "testy": "CI=false react-scripts test --verbose false -t --env=jsdom --findRelatedTests=**/*test.{js,ts,tsx,jsx} --forceExit -u",
    "testx": "CI=false react-scripts test --verbose --env=jsdom --findRelatedTests=**/*test.{js,ts,tsx,jsx} --forceExit -u",
    "testc": "npm run testx -- --coverage",
    "eject": "react-scripts eject",
    "testg": "npm run testx",
    "command": "npm lint && npm testg",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
      "prettier --check --write src",
      "git add -A ."
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^26.6.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "prop-types": "^15.7.2",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
